@model CSGOBeast.Web.Areas.Games.Models.CoinFlips.CompleteCoinFlipViewModel
@{
    ViewBag.Title = "_BuyItem";
}

@using (Html.BeginForm("CompleteCoinFlip", "CoinFlips", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <div class="details-link">
        @Html.EditorFor(m => m.Id, new { @class = "form-control", htmlAttributes = new { @class = "hidden" } })
        <p class="nomargin"><input type="submit" class="btn btn-success btn-xs" value="COMPETE" /></p>
    </div>
}

